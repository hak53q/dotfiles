pkgname=otf-monaspace-nerdfonts
pkgbase=monaspace-font
pkgver=1.300
pkgrel=1
pkgdesc='An innovative superfamily of fonts for code, by GitHub'
arch=(any)
url="https://github.com/githubnext/monaspace"
license=(OFL-1.0-RFN)
source=("https://github.com/githubnext/monaspace/releases/download/v1.300/monaspace-nerdfonts-v1.300.zip")
sha256sums=('a02bddd0c73682accf7eab90f242b693bdc3a8af42b7a79c43377bc5daa148ac')
jithemia={Argon,Krypton,Neon,Radon,Xenon}

package() {
  rm -r $srcdir/NerdFonts/*/*Wide*.otf
  cd "NerdFonts"
  install -Dm644 -t "$pkgdir/usr/share/fonts/OTF/" */*.otf
}
